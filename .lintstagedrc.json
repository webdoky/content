{
  "*.js": ["eslint --quiet --fix"],
  "*.md": [
    "markdownlint-cli2 || true",
    "node scripts/front-matter_linter.js --fix true",
    "prettier --write --ignore-unknown"
  ],
  "tests/**/*.*": "yarn test:front-matter-linter",
  "*_additions.txt": [
    "node --experimental-specifier-resolution=node ./scripts/sort-lines.js"
  ]
}
